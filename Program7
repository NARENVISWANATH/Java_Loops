public class Loops6 {
      public static void main(String args[]) {
        
        {
          char ch = 'y';
          do
          {
              System.out.println("Hello world!!");
              System.out.println("Do you want to continue y/n: ");
              ch = scan.nextLine().charAt(0);
          }while(ch!='n');
          System.out.println("Thank you!!");
          
        }
    }

}
    

